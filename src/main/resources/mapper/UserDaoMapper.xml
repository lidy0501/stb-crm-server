<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.stb.stbcrmserver.dao.UserDao">

    <insert id="addUser" parameterType="cn.stb.stbcrmserver.domain.User">
        insert into
        crm_user(user_id,user_name,user_phone,user_email,company,user_state,user_type,operator_id,
        remark)
        values (#{userId},#{userName},#{userPhone},#{userEmail},#{company},#{userState},#{userType},#{operatorId},
        #{remark})
    </insert>

    <update id="modifyUser" parameterType="cn.stb.stbcrmserver.domain.User">
        update crm_user
        <set>
            <if test="userState!=null">
                user_state=#{userState}
            </if>
            <if test="userType!=null">
                user_type=#{userType}
            </if>
        where user_id = #{userId}
        </set>
    </update>

    <delete id="deleteUserById" parameterType="java.lang.String">
        delete from crm_user
        where user_id = #{userId}
    </delete>

    <select id="queryUserByOperatorIdAndUserType" resultType="cn.stb.stbcrmserver.domain.User"  parameterType="java.util.Map">
        select user_id,user_name,user_phone,user_email,company,user_state,operator_id,user_type,create_time,update_time,remark
        from crm_user
        where user_state = '1'
        <if test=" 0 eq userType">
            and user_type = '0'
        </if>
        <if test="1 eq userType">
            <if test="0 neq staffType">
                and  operator_id = #{operatorId}
            </if>
            and user_type = '1'
        </if>
    </select>

</mapper>